<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlog"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_margin="50dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:includeFontPadding="false"
        android:shadowColor="#FFFFFF"
        android:text="@string/welcome_sir"
        android:textColor="#FDFDFD"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@drawable/boxdesign"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:fontFamily="@font/aclonica"
            android:hint="First Name"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/lName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:hint="Last Name"
            android:minHeight="48dp"

            android:textColor="#000000"
            android:textColorHint="#000000" />
    </LinearLayout>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:background="@drawable/boxdesign"
        android:fontFamily="@font/aclonica"
        android:hint="Email"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/PhoneNumber"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:background="@drawable/boxdesign"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Phone number"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/register_password"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boxdesign"
        android:fontFamily="@font/aclonica"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/register_password2"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:background="@drawable/boxdesign"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Re-Enter password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/CheckPass"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:fontFamily="@font/aclonica"
        android:text="Show password"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="203dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectdesign"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/aclonica"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconTint="#101C5E"
        app:rippleColor="#3F51B5" />

    <TextView
        android:id="@+id/existing_account"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/aclonica"
        android:shadowColor="#000000"
        android:text="Existing Account"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

</LinearLayout>